<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aceanuu.swss"
    android:versionCode="231"
    android:versionName="2.9.1" >
	    
    <uses-feature android:name="android.hardware.touchscreen" android:required="false"/>
    
    <uses-sdk android:minSdkVersion="10" 
              android:targetSdkVersion="15"/>

    <application
        android:icon="@drawable/sevenwss_icon"
        android:label="@string/app_name">
        
        <activity
            android:windowSoftInputMode="adjustPan"
            android:screenOrientation="portrait"
            android:name=".ScoreSheet"
            android:label="@string/app_name" 
            android:theme="@style/ThisTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name=".Settings" 
            android:label="Settings" 
            android:theme="@style/ThisTheme"
            android:screenOrientation="portrait">
		    <intent-filter>
		       <category android:name="android.intent.category.DEFAULT" />
		    </intent-filter>
		</activity>
		
		<activity android:name=".Stats"
	        android:label="Stats" 
            android:theme="@style/ThisTheme"
            android:screenOrientation="portrait">
	        <meta-data
	            android:name="android.support.PARENT_ACTIVITY"
	            android:value="com.aceanuu.swss.ScoreSheet" />
	    </activity>
        
    </application>

</manifest>