<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:paddingTop="4dp"
	android:paddingBottom="4dp"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
	android:layout_height="46dp"
	android:orientation="horizontal">	
		<TextView
		    android:layout_centerVertical="true"
		    android:layout_alignParentLeft="true"
	        android:id="@+id/playerName"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
		    android:text="">    
		</TextView>
		<RelativeLayout 
		android:layout_alignParentRight="true"
		android:id="@+id/scoreBlock"
		android:layout_width="236dp"
		android:layout_height="fill_parent"
		android:orientation="horizontal"> 
			<Button
			    android:layout_alignParentLeft="true"
			    android:layout_centerVertical="true"
		        android:id="@+id/neg"
				android:layout_width="46dp"
				android:layout_height="46dp"
			    android:text="-"/>   
			<EditText
			    android:selectAllOnFocus="true"
			    android:layout_centerVertical="true"
			    android:layout_toRightOf="@id/neg"
		        android:id="@+id/numTablet"
			    android:inputType="number"
			    android:maxLines="1"
				android:layout_width="36dp"
				android:layout_height="wrap_content"
			    android:gravity="center"
			    android:maxLength="1"
			    android:ellipsize="end"
			    android:hint="0"
			    android:text=""/>  
			<EditText
			    android:selectAllOnFocus="true"
			    android:layout_toRightOf="@+id/numTablet"
			    android:layout_centerVertical="true"
		        android:id="@+id/numCog"
			    android:inputType="number"
			    android:maxLines="1"
			    android:maxLength="1"
				android:layout_width="36dp"
				android:layout_height="wrap_content"
			    android:gravity="center"
			    android:ellipsize="end"
			    android:hint="0"
			    android:text=""/>    
			<EditText
			    android:selectAllOnFocus="true"
			    android:layout_toRightOf="@+id/numCog"
			    android:layout_centerVertical="true"
		        android:id="@+id/numCompass"
			    android:inputType="number"
			    android:maxLines="1"
			    android:maxLength="1"
				android:layout_width="36dp"
				android:layout_height="wrap_content"
			    android:gravity="center"
			    android:ellipsize="end"
			    android:hint="0"
			    android:text=""/>    
			<EditText
			    android:selectAllOnFocus="true"
			    android:layout_toRightOf="@+id/numCompass"
			    android:layout_centerVertical="true"
		        android:id="@+id/numWild"
			    android:inputType="number"
			    android:maxLines="1"
			    android:maxLength="1"
				android:layout_width="36dp"
				android:layout_height="wrap_content"
			    android:gravity="center"
			    android:ellipsize="end"
			    android:hint="0"
			    android:text=""/>     
			<Button
			    android:layout_alignParentRight="true"
			    android:layout_centerVertical="true"
		        android:id="@+id/pos"
				android:layout_width="46dp"
				android:layout_height="46dp"
			    android:text="+"/>    
		</RelativeLayout>
</RelativeLayout>	